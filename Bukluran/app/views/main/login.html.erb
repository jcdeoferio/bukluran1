<td class = "content_area">
	<h1><font color='green'>Announcements</font> </h1>
	<ul>
	<% for announcement in @announcements %>
	<li> <%= announcement.message %>
	<% end %>
	</ul>
</td>
<td class = "login_area">
  <h3>LOG IN </h3>
	<div class="login">
		<% form_tag do%>
			Username: <br><%= text_field_tag 'login', nil, :size => "20x1" %> <br>
			Password: <br><%= password_field_tag 'password', nil, :size => "20x1" %> <br><br>
	      <%= submit_tag 'login'%>
		<% end %>
	</div>
</td>
