<%= render :partial => '/organizations/menu' %>
<td class = "content_area">
	<h2><hr>Members for A.Y. <%="#{@schoolyear} #{@sem}" %><hr></h2>
	<%= error_messages_for 'member' %>
	<div id='error'><%= flash[:error] %></div>
	<div id='notification'><%= flash[:notice] %></div>
	
	<div class = "content">
	<% unless @members.empty? %>
		<table class = "form_table" border = 1>
			<tr>
				<th width="30%">Student No</th>
				<th>Position</th>
			</tr>
		<% for member in @members %>
			<tr>
				<td><%=h member.student.student_no %><br>
					<% if  @editable %>
					<font size=1><%= link_to 'delete', {:action => 'destroy', :id => member.id}, :confirm => "Are you sure you want to delete this member?" %></font>
					<% end %>
				</td>
				<td><%=h member.position %></td>
			</tr>
		<% end %>
		</table>
	<% end %>
	</div>
	<table>
		<% if  @status == "Not Renewed" %>
		<th class = "buttons_table"><%= button_to 'Upload Members/Officers List', :controller => 'members' %></th>
		<% end %>
		<th class = "buttons_table"><%= button_to 'Back', :controller => 'organizations', :action => 'show_forms' %></th>
	</table>
</td>